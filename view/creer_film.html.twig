{% if status is not defined %}
	{# si status pas défini on affiche le formulaire pour créer un film #}

	<div class="container">
		<div class="row mt-5 justify-content-center ">
			<div class="col-lg-6 col-md-9 col-sm-12">
				<div class="hero mt-5 mt-sm-3">
					<div data-aos="fade-down" class="mapp p-3 d-flex justify-content-between align-items-center">
						<div class="options">
							<a href="<?php echo BASE_URL ?>home">
								<i class="fas fa-home"></i>
							</a>
						</div>
						<div class="title">
							<h4>Ajouter film</h4>
						</div>
						<div></div>
					</div>
					<form action="creer_film" method="post" data-aos="fade-up" class="mt-3">
						<div class="form-group">
							<label>Titre
								<span>*</span>
							</label>
							<input type="text" class="form-control" placeholder="Entrez le titre" name="titre" maxlength="255" size="100" required>
						</div>
						<div class="form-group">
							<label>Réalisateur
							</label>
							<input type="text" class="form-control" placeholder="Realisateur" maxlength="255" size="100" name="realisateur">
						</div>

						<div class="form-group">
							<label>Affiche</label>
							<input type="text" class="form-control" placeholder="Affiche" maxlength="255" size="100" name="affiche">
						</div>

						<div class="form-group">
							<label>Année
							</label>
							<input type="number" class="form-control" placeholder="Année" maxlength="4" size="4" name="annee">
						</div>

						<div class="form-group mt-3">
							<button type="submit" class="btn btn-primary mt-1 mb-1" name="add">Ajouter film</button>
						</div>

					</form>

				</div>
			</div>
		</div>

	</div>


{% else %}

	<div>
		<p>{{status}}
			:</p>
		{# si film défini affiche films #}
		{% if film is defined %}
			{{film.get_titre}}
			:
			{{film.get_realisateur}}
			:
			{{film.get_affiche}}
			:
			{{film.get_annee}}

		</div>
	{% endif %}
{% endif %}
